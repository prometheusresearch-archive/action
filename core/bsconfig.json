{
  "name": "core",
  "namespace": true,
  "sources": [
    {
      "dir": "menhirLib"
    },
    {
      "dir": "src",
      "generators": [
        {
          "name": "ocamllex",
          "edge": ["Lexer.ml", ":", "Lexer.mll"]
        },
        {
          "name": "menhir",
          "edge": ["Parser.ml", "Parser.mli", ":", "Parser.mly"]
        }
      ]
    },
    {
      "dir": "src/__tests__",
      "type": "dev"
    }
  ],
  "package-specs": {
    "module": "commonjs",
    "in-source": true
  },
  "generators": [
    {
      "name": "ocamllex",
      "command": "ocamllex $in"
    },
    {
      "name": "menhir",
      "command": "menhir --explain --table $in"
    }
  ],
  "bs-dev-dependencies": ["@glennsl/bs-jest"],
  "suffix": ".bs.js",
  "ppx-flags": ["./ppx_let"]
}
